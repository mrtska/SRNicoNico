        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.ContextMenu.xaml" />
        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.DataGrid.xaml" />
        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.ListBox.xaml" />
        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.MenuItem.xaml" />
        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.Slider.xaml" />
        <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.TextBox.xaml" />
    </ResourceDictionary.MergedDictionaries>

</ResourceDictionary>
