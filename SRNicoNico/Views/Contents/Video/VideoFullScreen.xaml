                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="GotKeyboardFocus">
                                <ei:ChangePropertyAction TargetObject="{Binding}" PropertyName="IsFocused" Value="True" />
                            </i:EventTrigger>
                            <i:EventTrigger EventName="LostKeyboardFocus">
                                <ei:ChangePropertyAction TargetObject="{Binding}" PropertyName="IsFocused" Value="False" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </metro:PromptTextBox>
                    <Button Grid.Column="2" Content="コメント" Focusable="False">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="Click">
                                <l:LivetCallMethodAction MethodTarget="{Binding}" MethodName="Post" />
                            </i:EventTrigger>
                            <l:LivetDataTrigger Binding="{Binding ElementName=comment,Path=Text.Length,Mode=OneWay}" Value="0">
                                <ei:ChangePropertyAction PropertyName="IsEnabled" Value="False" />
                            </l:LivetDataTrigger>
                            <l:LivetDataTrigger Binding="{Binding ElementName=comment,Path=Text.Length,Mode=OneWay}" Comparison="NotEqual" Value="0">
                                <ei:ChangePropertyAction PropertyName="IsEnabled" Value="True" />
                            </l:LivetDataTrigger>
                        </i:Interaction.Triggers>
                    </Button>
                </Grid>
            </Border>
        </controls:ManagedPopup>
        <controls:ManagedPopup x:Name="descPopup" AllowsTransparency="True" IsOpen="{Binding ShowFullScreenDescription,Mode=OneWay}" StaysOpen="True" Height="300" Placement="Bottom" VerticalOffset="-300" PopupAnimation="Fade">
            <ScrollViewer Height="300">
                <Grid x:Name="box" x:FieldModifier="private" Grid.IsSharedSizeScope="True" Background="{DynamicResource AlternationBackgroundBrushKey}" Opacity="0.5" Width="{Binding RelativeSource={RelativeSource AncestorType={x:Type Grid}}, Path=ActualWidth}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="{Binding Model.ApiData.Title}" FontSize="30" TextWrapping="Wrap"/>
                    <ItemsControl ItemsSource="{Binding Model.ApiData.Tags}" Background="{DynamicResource AlternationBackgroundBrushKey}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="{x:Type nnw:VideoTag}">
                                <StackPanel Orientation="Horizontal">
                                    <Image Width="16" Height="16" Source="/SRNicoNico;component/Icons/Category.png" Margin="5,2">
                                        <Image.Style>
                                            <Style TargetType="{x:Type Image}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCategory}" Value="False">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Image.Style>
                                        <Image.Effect>
                                            <DropShadowEffect Color="Black" RenderingBias="Quality" />
                                        </Image.Effect>
                                    </Image>
                                    <TextBlock TextWrapping="Wrap" Text="{Binding Name}" Margin="5,2" TextDecorations="Underline" Cursor="Hand" />
                                    <Canvas Background="Transparent" Width="14" Height="14" ToolTip="{Binding Name}" Cursor="Hand">
                                        <Path Width="14" Height="14" Stretch="Uniform" Data="M10,10v7H90v-7ZM50,17l-5,13h3l5,-13ZM20,30h60v60h-5v-55h-50v55h-5ZM25,58h50v5h-50ZM25,83h50v5h-50Z">
                                            <Path.Style>
                                                <Style TargetType="{x:Type Path}">
                                                    <Setter Property="Fill" Value="Orange" />
                                                    <Setter Property="Effect">
                                                        <Setter.Value>
                                                            <DropShadowEffect Color="Black" RenderingBias="Quality" />
                                                        </Setter.Value>
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsDictionaryExists}" Value="False">
                                                            <Setter Property="Fill" Value="Gray" />
                                                            <Setter Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect Color="Gray" RenderingBias="Quality" />
                                                                </Setter.Value>
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Path.Style>
                                        </Path>
                                    </Canvas>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                    <TextBlock Grid.Row="2" Text="{Binding ApiData.Video.PostedDateTime, StringFormat=yyyy年MM月dd日 HH:mm:ss 投稿}" Margin="10,0,0,0" FontSize="20" />
                    <controls:HtmlRenderer Grid.Row="3" HtmlText="{Binding Model.ApiData.Description}" FontSize="20" Margin="10,0">
                        <controls:HtmlRenderer.Resources>
                            <Style TargetType="{x:Type Hyperlink}" BasedOn="{StaticResource {x:Type Hyperlink}}">
                                <Setter Property="ToolTipService.ShowDuration" Value="0x7FFFFFFF" />
                                <EventSetter Event="MouseEnter" Handler="Hyperlink_Loaded" />
                            </Style>
                        </controls:HtmlRenderer.Resources>
                    </controls:HtmlRenderer>
                </Grid>
            </ScrollViewer>
        </controls:ManagedPopup>
    </Grid>
</Window>
