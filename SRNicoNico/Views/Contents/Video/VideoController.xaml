                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <l:LivetCallMethodAction MethodName="ToggleMute" MethodTarget="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:RoundButton>
                <Slider Width="70" Margin="2,0,0,0" VerticalAlignment="Center" AutoToolTipPlacement="BottomRight" AutoToolTipPrecision="2" Focusable="False"
                        IsMoveToPointEnabled="True" LargeChange="0.25" Maximum="2.5" Minimum="0.5" SmallChange="0.25" TickFrequency="0.5"
                        TickPlacement="Both" ToolTipService.ShowOnDisabled="True"
                        Value="{Binding PlayRate}">
                    <Slider.Style>
                        <Style BasedOn="{StaticResource {x:Type Slider}}" TargetType="{x:Type Slider}">
                            <Setter Property="ToolTip" Value="再生速度" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ChangePlayRateAvalilable}" Value="NotInitialized">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ChangePlayRateAvalilable}" Value="PremiumOnly">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="ToolTip" Value="再生速度&#10;プレミアム会員のみの機能とさせていただいております" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ChangePlayRateAvalilable}" Value="NotSupportVideo">
                                    <Setter Property="IsEnabled" Value="False" />
                                    <Setter Property="ToolTip" Value="再生速度&#10;対応していない動画です" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Slider.Style>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseRightButtonDown">
                            <ei:ChangePropertyAction PropertyName="PlayRate"
                                                     TargetObject="{Binding}"
                                                     Value="1.0" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Slider>

                <controls:ManagedPopup x:Name="popup" x:FieldModifier="private" AllowsTransparency="True"
                                       DataContext="{Binding Comment}"
                                       Focusable="False"
                                       IsOpen="{Binding Post.IsCommentPopupOpen, Mode=TwoWay}"
                                       Placement="Bottom"
                                       PlacementTarget="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}}"
                                       PopupAnimation="Slide" StaysOpen="False">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Opened">
                            <l:LivetCallMethodAction MethodName="FocusTextBox"
                                                     MethodParameter="{Binding ElementName=popup}"
                                                     MethodTarget="{Binding ElementName=bar}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <v:VideoCommentBar x:Name="bar"
                                       Width="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=ActualWidth}"
                                       x:FieldModifier="private"
                                       DataContext="{Binding Post}"
                                       Opacity="0.8" />
                </controls:ManagedPopup>
                <Button Margin="5,0,0,0" VerticalAlignment="Center" Content="コメント"
                        DataContext="{Binding Comment}"
                        Focusable="False"
                        IsEnabled="{Binding CanComment}"
                        ToolTip="コメントする">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="Click">
                            <ei:ChangePropertyAction PropertyName="IsOpen" TargetName="popup" Value="True" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Button>
            </StackPanel>

