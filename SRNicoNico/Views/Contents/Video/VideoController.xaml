                            <l:LivetCallMethodAction MethodName="TogglePlay" MethodTarget="{Binding}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </controls:RoundButton>
                <controls:RoundButton Margin="2,0,0,0" EllipseDiameter="36" Focusable="False"
