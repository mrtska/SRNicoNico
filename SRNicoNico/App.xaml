<Application x:Class="SRNicoNico.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converter="clr-namespace:SRNicoNico.Views.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converter:DurationConverter x:Key="DurationConverter" />
            <converter:EnumDisplayConverter x:Key="EnumDisplayConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/SRNicoNico;component/Themes/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
